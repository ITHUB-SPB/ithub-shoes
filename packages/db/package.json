{
  "name": "@ithub-shoes/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "tsx ./src/seed.ts"
  },
  "devDependencies": {
    "@types/exceljs": "^1.3.2",
    "prisma": "^6.15.0",
    "tsdown": "catalog:",
    "tsx": "^4.20.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "catalog:",
    "dotenv": "catalog:",
    "exceljs": "^4.4.0",
    "zod": "catalog:"
  }
}